#define B_1 2
#define B_2 3
#define B_3 4
#define A 5
#define B 6
#define C 7
#define D 8
#define E 9
#define F 10
#define G 11
#define OUT(pin) pinMode(pin, OUTPUT)
#define IN(pin) pinMode(pin, INPUT)
#define Lee(pin) digitalRead(pin)
#define On(pin) digitalWrite(pin, HIGH)
#define Off(pin) digitalWrite(pin, LOW)

void setup()
{
  IN(B_1);
  IN(B_2);
  IN(B_3);
  OUT(A);
  OUT(B);
  OUT(C);
  OUT(D);
  OUT(E);
  OUT(F);
  OUT(G);
}

void loop()
{
  for(int x=0; x<=9; x++)
  {
    if(x==0)
    {
      On(A);
      On(B);
      On(C);
      On(D);
      On(E);
      On(F);
      Off(G);
    }
    if(x==1)
    {
      Off(A);
      On(B);
      On(C);
      Off(D);
      Off(E);
      Off(F);
      Off(G);
    }
    if(x==2)
    {
      On(A);
      On(B);
      Off(C);
      On(D);
      On(E);
      Off(F);
      On(G);
    }
    if(x==3)
    {
      On(A);
      On(B);
      On(C);
      On(D);
      Off(E);
      Off(F);
      On(G);
    }
    if(x==4)
    {
      Off(A);
      On(B);
      On(C);
      Off(D);
      Off(E);
      On(F);
      On(G);
    }
    if(x==5)
    {
      On(A);
      Off(B);
      On(C);
      On(D);
      Off(E);
      On(F);
      On(G);
    }
    if(x==6)
    {
      On(A);
      Off(B);
      On(C);
      On(D);
      On(E);
      On(F);
      On(G);
    }
    if(x==7)
    {
      On(A);
      On(B);
      On(C);
      Off(D);
      Off(E);
      Off(F);
      Off(G);
    }
    if(x==8)
    {
      On(A);
      On(B);
      On(C);
      On(D);
      On(E);
      On(F);
      On(G);
    }
    if(x==9)
    {
      On(A);
      On(B);
      On(C);
      Off(D);
      Off(E);
      On(F);
      On(G);
    }
    if(Lee(B_1)==LOW && Lee(B_2)==LOW && Lee(B_3)==LOW)
    {
      delay(500);
    }
    if(Lee(B_1)==HIGH)
    {
      delay(1000);
    }
    if(Lee(B_2)==HIGH)
    {
      delay(2000);
    }
    if(Lee(B_3)==HIGH)
    {
      delay(3000);
    }
    if(Lee(B_1)==HIGH && Lee(B_2)==HIGH && Lee(B_3)==HIGH)
    {
      delay(500);
    }
  }
}
