#define B_1 2
#define B_2 3
#define B_3 4
#define B_4 5
#define A 6
#define B 7
#define C 8
#define D 9
#define E 10
#define F 11
#define G 12
#define L_1 A0
#define L_2 A1
#define L_3 A2
#define L_4 A3
#define L_5 A4
#define ModeIn(pin) pinMode(pin, INPUT)
#define ModeOut(pin) pinMode(pin, OUTPUT)
#define Escribir(pin) Serial.println(pin)
#define Leer(pin) digitalRead(pin)
#define On(pin) digitalWrite(pin, HIGH)
#define Off(pin) digitalWrite(pin, LOW)

int y=0;

void setup()
{
  Serial.begin(9600);
  ModeIn(B_1);
  ModeIn(B_2);
  ModeIn(B_3);
  ModeIn(B_4);
  ModeOut(A);
  ModeOut(B);
  ModeOut(C);
  ModeOut(D);
  ModeOut(E);
  ModeOut(F);
  ModeOut(G);
  ModeOut(L_1);
  ModeOut(L_2);
  ModeOut(L_3);
  ModeOut(L_4);
  ModeOut(L_5);
}

void loop()
{
  if(Leer(B_1)==LOW && Leer(B_3)==HIGH)
  {
    Escribir("Practica No.4 - Luis Fernando Leiva Quezada");
    delay(300);
  }
  if(Leer(B_2)==LOW && Leer(B_4)==HIGH)
  {
    for(int x=0; x<=5; x++)
    {
      if(x==0 || x==2 || x==4)
      {
        for(y; y<=4; y++)
        {
          delay(500);
          if(y==0)
          {
            On(L_1); 
          }
          if(y==1)
          {
            On(L_2);
            Off(L_1);
          }
          if(y==2)
          {
            On(L_3);
            Off(L_2);
          }
          if(y==3)
          {
            On(L_4);
            Off(L_3);
          }
          if(y==4)
          {
            On(L_5);
            Off(L_4);
          }
        }
      }
      if(x==1 || x==3 || x==5)
      {
        for(y; y>=0; y--)
        {
          delay(500);
          if(y==0)
          {
            On(L_1); 
          }
          if(y==1)
          {
            On(L_1);
            Off(L_2);
          }
          if(y==2)
          {
            On(L_2);
            Off(L_3);
          }
          if(y==3)
          {
            On(L_3);
            Off(L_4);
          }
          if(y==4)
          {
            On(L_4);
            Off(L_5);
          }
        }
      }
    }
    for(int z=0; z<=2; z++)
    {
      if(z==0 || z==1 || z==2)
      {
        On(L_1);
        On(L_2);
        On(L_3);
        On(L_4);
  		On(L_5);
        delay(500);
  		Off(L_1);
  		Off(L_2);
  		Off(L_3);
  		Off(L_4);
  		Off(L_5);
        delay(500);
      }
    }
  }
  if(Leer(B_3)==LOW && Leer(B_1)==HIGH)
  {
    for(int x=0; x<=7; x++)
    {
      if(x==0)
      {
        On(A);
        Off(B);
        Off(C);
        On(D);
        On(E);
        On(F);
        Off(G);
      }
      if(x==1)
      {
        Off(A);
        Off(B);
        On(C);
        On(D);
        On(E);
        Off(F);
        Off(G);
      }
      if(x==2)
      {
        On(A);
        On(B);
        On(C);
        Off(D);
        On(E);
        On(F);
        On(G);
      }
      if(x==3)
      {
        Off(A);
        On(B);
        On(C);
        Off(D);
        Off(E);
        Off(F);
        On(G);
      }
      if(x==4)
      {
        Off(A);
        Off(B);
        Off(C);
        Off(D);
        On(E);
        On(F);
        On(G);
      }
      if(x==5)
      {
        Off(A);
        Off(B);
        Off(C);
        Off(D);
        On(E);
        Off(F);
        On(G);
      }
      if(x==6)
      {
        Off(A);
        Off(B);
        On(C);
        On(D);
        On(E);
        Off(F);
        On(G);
      }
      if(x==7)
      {
        Off(A);
        Off(B);
        Off(C);
        Off(D);
        Off(E);
        Off(F);
        Off(G);
      }
      delay(2000);
    }
  }
  if(Leer(B_4)==LOW && Leer(B_2)==HIGH)
  {
    Escribir("Gracias por su atencion");
    delay(200);
  }
  if(Leer(B_1)==LOW && Leer(B_3)==LOW || Leer(B_2)==LOW && Leer(B_4)==LOW)
  {
    Escribir("Gracias por su atencion");
    delay(200);
  }
}
