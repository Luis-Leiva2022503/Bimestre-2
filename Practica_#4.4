#define B_1 2
#define B_2 3
#define In(pin) pinMode(pin, INPUT)
#define Lee(pin) digitalRead(pin)
#define Escribe(pin) Serial.println(pin)

int x=0;
int y=0;

void setup()
{
  Serial.begin(9600);
  In(B_1);
  In(B_2);
  Escribe("Inicio");
}

void loop()
{
  while(Lee(B_1)==HIGH && x<=99)
  {
    x++;
    if(y==0 && x==100)
    {
      x = x-100;
    }
    Escribe(x);
    delay(100);
    if(y==1)
    {
      y = 1-y;
    }
  }
  while(Lee(B_2)==HIGH && x>=0)
  {
    if(y==0)
    {
      y = 1-y;
      if(x==0)
      {
        x = 100;
      }
    }
    x--;
    if(y==1 && x==-1)
    {
      x = x+100;
    }
    Escribe(x);
    delay(100);
  }
}
